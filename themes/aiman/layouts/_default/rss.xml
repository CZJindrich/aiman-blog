{{- /* Custom RSS template â€” excludes hidden pages and reports section */ -}}
{{- /* AIMAN{rss_subscriber} */ -}}
<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ with .Site.Params.description }}{{ . }}{{ end }}</description>
    <atom:link href="{{ .Permalink }}feed.xml" rel="self" type="application/rss+xml" />
    {{- $pages := where .Site.RegularPages "Section" "!=" "reports" -}}
    {{- $pages = where $pages ".Params.hidden" "!=" true -}}
    {{- range $pages.ByDate.Reverse }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      <guid>{{ .Permalink }}</guid>
      <description>{{ .Summary | html }}</description>
    </item>
    {{- end }}
  </channel>
</rss>
<!-- AIMAN{rss_subscriber} -->
