{{- /* RSS 2.0 feed â€” W3C and RSS Board validator compliant */ -}}
{{- /* AIMAN{rss_subscriber} */ -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ with .Site.Params.description }}{{ . }}{{ end }}</description>
    <language>{{ .Site.LanguageCode }}</language>
    {{- with .OutputFormats.Get "RSS" }}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}
    <generator>Hugo</generator>
    <docs>https://www.rssboard.org/rss-specification</docs>
    <ttl>60</ttl>
    <image>
      <url>{{ .Site.BaseURL }}favicon-32x32.png</url>
      <title>{{ .Site.Title }}</title>
      <link>{{ .Permalink }}</link>
    </image>
    {{- $pages := where .Site.RegularPages "Section" "!=" "reports" -}}
    {{- $pages = where $pages ".Params.hidden" "!=" true -}}
    {{- $pages = $pages.ByDate.Reverse -}}
    {{- with $pages }}
    <lastBuildDate>{{ (index . 0).Date.UTC.Format "Mon, 02 Jan 2006 15:04:05 +0000" | safeHTML }}</lastBuildDate>
    {{- range . }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.UTC.Format "Mon, 02 Jan 2006 15:04:05 +0000" | safeHTML }}</pubDate>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <description>{{ printf "<![CDATA[%s]]>" .Summary | safeHTML }}</description>
      {{- range (.GetTerms "categories") }}
      <category>{{ .LinkTitle }}</category>
      {{- end }}
      {{- range (.GetTerms "tags") }}
      <category>{{ .LinkTitle }}</category>
      {{- end }}
    </item>
    {{- end }}
    {{- end }}
  </channel>
</rss>
<!-- AIMAN{rss_subscriber} -->
